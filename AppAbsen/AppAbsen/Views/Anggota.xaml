<Window x:Class="AppAbsen.Views.Anggota"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppAbsen.Views"
        mc:Ignorable="d"
        Title="Anggota" WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="78*"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.Column="0">
            <Label Content="INPUT DATA UNIT KERJA" FontSize="30" FontWeight="Bold" HorizontalAlignment="Center" Margin="0 10 0 0"/>
        </StackPanel>
        <StackPanel Grid.Column="0" Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60*"/>
                    <ColumnDefinition Width="15*"/>
                    <ColumnDefinition Width="25*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="1" Grid.Row="0">
                    <Label Content="Search" HorizontalAlignment="Right" FontSize="24" FontStyle="Italic" FontFamily="Monotype Corsiva"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Grid.Row="0">
                    <TextBox Text="{Binding NamaJurusan, Mode=TwoWay, ValidatesOnDataErrors=True}" Margin="0 3 0 0" HorizontalAlignment="Left" Width="166" IsEnabled="{Binding EnabledIdSiswa}" Height="30"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0" Margin="15 0 15 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="40*"/>
                    <ColumnDefinition Width="60*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Grid.Row="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="75*"/>
                            <RowDefinition Height="20*"/>
                            <RowDefinition Height="5*"/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Column="0" Grid.Row="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50*"/>
                                    <ColumnDefinition Width="50*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Grid.Row="0">
                                    <Label Content="Id Unit Kerja" FontSize="15" FontWeight="Bold"/>
                                    <Label Content="Nama Unit Kerja" FontSize="15" FontWeight="Bold" Margin="0 20 0 0"/>
                                </StackPanel>
                                <StackPanel Grid.Column="1" Grid.Row="0">
                                    <TextBox Text="{Binding IdUnitKerja, Mode=TwoWay, ValidatesOnDataErrors=True}" Margin="0,3,0,0" IsEnabled="{Binding EnabledIdSiswa}" Height="30" HorizontalAlignment="Left" Width="123"/>
                                    <TextBox Text="{Binding NamaUnitKerja, Mode=TwoWay, ValidatesOnDataErrors=True}" Margin="0,25,0,0" IsEnabled="{Binding EnabledIdSiswa}" Height="145" HorizontalAlignment="Left" Width="123"/>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                        <StackPanel Grid.Column="0" Grid.Row="1" Margin="0 20 0 0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15*"/>
                                    <ColumnDefinition Width="25*"/>
                                    <ColumnDefinition Width="20*"/>
                                    <ColumnDefinition Width="25*"/>
                                    <ColumnDefinition Width="15*"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="1" Grid.Row="0">
                                    <Button Content="Simpan" FontSize="12" Command="{Binding Absen}" CommandParameter="1" Height="25" Width="53" HorizontalAlignment="Left" Margin="6,0,0,0">
                                        <Button.Effect>
                                            <DropShadowEffect/>
                                        </Button.Effect>
                                    </Button>
                                </StackPanel>
                                <StackPanel Grid.Column="2" Grid.Row="0">
                                    <Button Content="Edit" FontSize="12" Command="{Binding Absen}" CommandParameter="1" Height="25">
                                        <Button.Effect>
                                            <DropShadowEffect/>
                                        </Button.Effect>
                                    </Button>
                                </StackPanel>
                                <StackPanel Grid.Column="3" Grid.Row="0">
                                    <Button Content="Simpan" FontSize="12" Command="{Binding Absen}" CommandParameter="1" Height="25" Width="53" HorizontalAlignment="Right" Margin="0,0,7,0">
                                        <Button.Effect>
                                            <DropShadowEffect/>
                                        </Button.Effect>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </StackPanel>

                    </Grid>
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="0">
                    <DataGrid ItemsSource="{Binding SourceViewJurusan}" CanUserAddRows="False" CanUserDeleteRows="False" AutoGenerateColumns="False"
                  SelectedItem="{Binding Selected}" Foreground="Black" FontSize="13" Margin="10 0 10 0">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="No" Binding="{Binding IdUnitKerja}"  Foreground="#FFEC6726" Width="10*"/>
                            <DataGridTextColumn Header="Id Unit Kerja" Binding="{Binding IdUnitKerja}"  Foreground="#FFEC6726" Width="45*"/>
                            <DataGridTextColumn Header="Nama Unit Kerja" Binding="{Binding NamaUnitKerja}"  Foreground="#FFEC6726" Width="45*"/>

                        </DataGrid.Columns>
                        <DataGrid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Delete" Command="{Binding DeleteCommand}">
                                </MenuItem>
                            </ContextMenu>
                        </DataGrid.ContextMenu>
                    </DataGrid>
                </StackPanel>

            </Grid>
        </StackPanel>

    </Grid>
</Window>
